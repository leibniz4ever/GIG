<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

	<!-- Popup menus -->
	<extension 
        point="org.eclipse.ui.popupMenus">
        
      <objectContribution
            adaptable="true"
            id="org.eclipse.ptp.gig.verificationPopUpMenuCU"
            nameFilter="*.cu"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               label="GIG"
               path="additions"
               id="verificationMenu">
            <separator name="verificationGroup"/>
         </menu>
         <action
               class="org.eclipse.ptp.gig.popup.actions.VerificationPopUpAction"
               enablesFor="1"
               id="org.eclipse.ptp.gig.verificationPopupC"
               label="Formally Verify CUDA Program"
               menubarPath="verificationMenu/verificationGroup"
               icon="icons/trident.gif">
         </action>
      </objectContribution>
   </extension>
   
   <!-- Preference Page -->
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.eclipse.ptp.ui.preferences.ptpPreferencesPage"
            class="org.eclipse.ptp.gig.preferences.GIGPreferencePage"
            id="org.eclipse.ptp.gig.preferences.GIGPreferences"
            name="GIG">
      </page>
   </extension>
   <!-- Preference Initializer -->
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.eclipse.ptp.gig.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   
   <!-- Toolbar Commands -->
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.ptp.gig.commands.category"
            name="GIG Commands Category">
      </category>
      <command
            categoryId="org.eclipse.ptp.gig.commands.category"
            id="org.eclipse.ptp.gig.commands.gigCommand"
            name="Run GIG">
      </command>
   </extension>
   
   <!-- Command Handlers -->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.ptp.gig.handlers.GIGHandler"
            commandId="org.eclipse.ptp.gig.commands.gigCommand">
      </handler>
   </extension>
   
   <!-- Menu Extension -->
   <extension
   		point="org.eclipse.ui.menus">
      <menuContribution
      		locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar id="org.eclipse.ptp.gig.toolbar">
             <command
                  commandId="org.eclipse.ptp.gig.commands.gigCommand"
                  icon="icons/trident.gif"
                  id="org.eclipse.ptp.gig.toolbar.refCommand"
                  style="pulldown"
                  tooltip="Formally Verify CUDA Program">
                <visibleWhen
                	checkEnabled="false">
                  <or>
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.eclipse.cdt.ui.CPerspective">
                        </equals>
                     </with>
                     <with
                           variable="activeWorkbenchWindow.activePerspective">
                        <equals
                              value="org.eclipse.ptp.rdt.ui.remoteCPerspective">
                        </equals>
                     </with>
                  </or>
                </visibleWhen>
             </command>
         </toolbar>
      </menuContribution>
      <menuContribution locationURI="menu:org.eclipse.ptp.gig.toolbar.refCommand?after=additions">
            <command
                  commandId="org.eclipse.ptp.gig.commands.gigCommand"
                  icon="icons/triple-trident.gif"
                  id="org.eclipse.ptp.gig.toolbar.menu.gigCommand">
            </command>
      </menuContribution>
    </extension>
   
   <!-- Views -->
   	<extension
         point="org.eclipse.ui.views">
      <category
            name="GIG"
            id="org.eclipse.ptp.gig">
      </category>
      <view
            name="GIG"
            icon="icons/sample.gif"
            category="org.eclipse.ptp.gig"
            class="org.eclipse.ptp.gig.views.GIGView"
            id="org.eclipse.ptp.gig.views.GIGView">
      </view>
   </extension>
   
   	<!-- Views Perspective -->
   	<extension
         	point="org.eclipse.ui.perspectiveExtensions">
      	<perspectiveExtension
            	targetID="org.eclipse.cdt.ui.CPerspective">
         	<view
               	ratio="0.5"
               	relative="org.eclipse.ui.console.ConsoleView"
            	relationship="stack"
               	id="org.eclipse.ptp.gig.views.GIGView">
         	</view>
      	</perspectiveExtension>
   	</extension>
   
   <!-- Help -->
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
